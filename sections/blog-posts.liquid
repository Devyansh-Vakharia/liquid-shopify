{% assign blog = section.settings.new-blog %}

{% unless blog.articles_count ==  0 %}
  <style>
    .blog-image-container {
      position: relative;
      display: inline-block;
    }
    .blog-image {
      border-radius: 15px; /* Adjust the value as needed */
      display: block;
    }
    .image-caption {
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      background-color: white;
      padding: 10px;
      box-sizing: border-box;
      border-bottom-left-radius: 10px;
      border-bottom-right-radius: 10px;
    }
  </style>
  <div class="page-width">
    <div class="grid grid--uniform grid--blog">
    {% for article in blog.articles limit: section.settings.liquid-range %}
      <div class="grid__item medium-up--one-third">
        <div class="blog-image-container">
          <a href="{{ article.url }}">
            <img src="{{ article.image | img_url: "300" }}" class="blog-image" style="height: 350px; width: 350px; margin-bottom: 20px;" />
          </a>
          <div class="image-caption">
            <a href="{{ article.url }}">{{ article.title }}</a>
          </div>
        </div>
        <br/>
        <br/>
      </div>
    {% endfor %}
    </div>
  </div>
{% endunless %}


{% schema %}
{
  "name": "New Blog Posts",
  "settings": [
    {
      "id": "liquid-range",
      "type": "range",
      "label": "Range",
      "min": 3,
      "max": 12,
      "step": 3,
      "default": 3
    },
    {
      "id": "new-blog",
      "type": "blog",
      "label": "Blog"
      
    }
  ],
  "presets": [
    {
      "name": "New Blog Posts",
      "category": "Posts"
    }
  ]
}
{% endschema %}
