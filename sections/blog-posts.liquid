{% schema %}
{
  "name": "New Blog Posts",
  "settings": [
    {
      "id": "liquid-range",
      "type": "range",
      "label": "Number of Posts",
      "min": 3,
      "max": 12,
      "step": 3,
      "default": 3
    },
    {
      "id": "new-blog",
      "type": "blog",
      "label": "Select Blog"
    }
  ],
  "presets": [
    {
      "name": "New Blog Posts",
      "category": "Blog Posts"
    }
  ]
}
{% endschema %}

{% assign blog = section.settings['new-blog'] %}

{% unless blog.articles.size == 0 %}
  {% assign post_count = 0 %}
  {% for article in blog.articles %}
    {% if post_count < section.settings['liquid-range'] %}
      <img src="{{ article.image | img_url }}"/>
      {{ article.title }}
      {% assign post_count = post_count | plus: 1 %}
    {% endif %}
  {% endfor %}
{% endunless %}
