{{ section.settings.liquid-range }}

{% assign blog = section.settings.new-blog %}

{% unless blog.articles_count ==  0 %}
  <div class="grid">
    {% for article in blog.articles limit: section.settings.liquid-range %}
      <div class="grid__item medium-up--one-third">
        <a href="{{ article.url }}">
          <img src="{{ article.image | img_url: '500x' }}" />
        </a>
        <br/>
        <a href="{{ article.url }}">{{ article.title }}</a>
      </div>
    {% endfor %}
  </div>
{% endunless %}
{% schema %}
{
  "name": "New Blog Posts",
  "settings": [
    {
      "id": "liquid-range",
      "type": "range",
      "label": "Range",
      "min": 3,
      "max": 12,
      "step": 3,
      "default": 3
    },
    {
      "id": "new-blog",
      "type": "blog",
      "label": "Blog"
      
    }
  ],
  "presets": [
    {
      "name": "New Blog Posts",
      "category": "Posts"
    }
  ]
}
{% endschema %}
