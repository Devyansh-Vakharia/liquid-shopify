{% assign blog = section.settings.new-blog %}

{% unless blog.articles_count == 0 %}
  <style>
    .blog-image {
      border-radius: 15px; /* Adjust the value as needed */
      height: 350px;
      width: auto;
      margin-right: 20px;
      display: inline-block;
    }
    .slideshow-container {
      overflow: hidden;
      white-space: nowrap;
    }
  </style>
  <div class="slideshow-container">
    {% for article in blog.articles limit: section.settings.liquid-range %}
      <a href="{{ article.url }}">
        <img src="{{ article.image | img_url: "300" }}" class="blog-image" />
      </a>
    {% endfor %}
  </div>

  <script>
    var slideIndex = 0;
    carousel();

    function carousel() {
      var i;
      var slides = document.getElementsByClassName("blog-image");
      for (i = 0; i < slides.length; i++) {
        slides[i].style.display = "none";
      }
      slideIndex++;
      if (slideIndex > slides.length) { slideIndex = 1 }
      slides[slideIndex - 1].style.display = "inline-block";
      setTimeout(carousel, 2000); // Change image every 2 seconds
    }
  </script>
{% endunless %}

{% schema %}
{
  "name": "Image Slideshow",
  "settings": [
    {
      "id": "liquid-range",
      "type": "range",
      "label": "Range",
      "min": 3,
      "max": 12,
      "step": 3,
      "default": 3
    },
    {
      "id": "new-blog",
      "type": "blog",
      "label": "Blog"
    }
  ],
  "presets": [
    {
      "name": "Image Slideshow",
      "category": "Posts"
    }
  ]
}
{% endschema %}
