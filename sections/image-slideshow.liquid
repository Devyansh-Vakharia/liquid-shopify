{% assign blog = section.settings.new-blog %}

{% unless blog.articles_count == 0 %}
  <style>
    .blog-slideshow {
      position: relative;
      overflow: hidden;
      margin: 0 auto;
      max-width: 1200px;
    }
    .blog-images {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
      transition: transform 0.5s ease;
    }
    .blog-image {
      position: relative;
      overflow: hidden;
      border-radius: 15px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease;
    }
    .blog-image img {
      width: 100%;
      height: auto;
      transition: transform 0.3s ease;
    }
    .blog-caption {
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      background-color: rgba(0, 0, 0, 0.7);
      padding: 10px;
      text-align: center;
    }
    .blog-caption a {
      color: #fff;
      text-decoration: none;
      font-weight: bold;
    }
  </style>

  <div class="blog-slideshow">
    <div class="blog-images">
      {% for article in blog.articles limit: section.settings.liquid-range %}
        <div class="blog-image">
          <a href="{{ article.url }}">
            <img src="{{ article.image | img_url: "400x" }}" alt="{{ article.title }}" />
          </a>
          <div class="blog-caption">
            <a href="{{ article.url }}">{{ article.title }}</a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>

  <script>
    // Slideshow functionality
    var blogSlideshow = document.querySelector('.blog-slideshow');
    var blogImages = document.querySelector('.blog-images');
    var imageCount = {{ blog.articles_count }};
    var currentIndex = 0;
    var slideInterval = setInterval(nextSlide, 5000); // Change slide every 5 seconds

    function nextSlide() {
      currentIndex = (currentIndex + 1) % imageCount;
      var offset = -currentIndex * 100;
      blogImages.style.transform = 'translateX(' + offset + '%)';
    }

    blogSlideshow.addEventListener('mouseover', function() {
      clearInterval(slideInterval);
    });

    blogSlideshow.addEventListener('mouseleave', function() {
      slideInterval = setInterval(nextSlide, 5000);
    });
  </script>
{% endunless %}

{% schema %}
{
  "name": "Image Slideshow",
  "settings": [
    {
      "id": "liquid-range",
      "type": "range",
      "label": "Number of Posts",
      "min": 3,
      "max": 12,
      "step": 3,
      "default": 3
    },
    {
      "id": "new-blog",
      "type": "blog",
      "label": "Select Blog"
    }
  ],
  "presets": [
    {
      "name": "Image Slideshow",
      "category": "Content"
    }
  ]
}
{% endschema %}
