{% assign blog = section.settings.new-blog %}

{% unless blog.articles_count == 0 %}
  <style>
    .blog-images {
      position: relative;
      max-width: 100%;
      margin: 0 auto;
      overflow: hidden;
    }
    .blog-slideshow {
      display: flex;
      transition: transform 0.5s ease;
    }
    .blog-image {
      width: 100%;
      overflow: hidden;
    }
    .blog-image img {
      width: 100%;
      height: auto;
      border-radius: 15px;
    }
    .blog-caption {
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      background-color: rgba(0, 0, 0, 0.7);
      padding: 10px;
      text-align: center;
    }
    .blog-caption a {
      color: #fff;
      text-decoration: none;
      font-weight: bold;
    }
    .dot-container {
      position: absolute;
      bottom: 10px;
      left: 50%;
      transform: translateX(-50%);
      display: flex;
    }
    .dot {
      height: 10px;
      width: 10px;
      background-color: #bbb;
      border-radius: 50%;
      margin: 0 5px;
      cursor: pointer;
    }
    .dot.active {
      background-color: #717171;
    }
  </style>
  <div class="blog-images">
    <div class="blog-slideshow">
      {% for article in blog.articles limit: section.settings.liquid-range %}
        <div class="blog-image">
          <a href="{{ article.url }}">
            <img src="{{ article.image | img_url: "400x" }}" alt="{{ article.title }}" />
          </a>
          <div class="blog-caption">
            <a href="{{ article.url }}">{{ article.title }}</a>
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="dot-container">
      {% for i in (1..section.settings.liquid-range) %}
        <span class="dot" onclick="currentSlide({{ i }})"></span>
      {% endfor %}
    </div>
  </div>

  <script>
    var slideIndex = 0;
    carousel();

    function carousel() {
      var slides = document.querySelectorAll('.blog-image');
      var dots = document.querySelectorAll('.dot');
      for (var i = 0; i < slides.length; i++) {
        slides[i].style.display = "none";
      }
      slideIndex++;
      if (slideIndex > slides.length) { slideIndex = 1; }
      for (i = 0; i < dots.length; i++) {
        dots[i].className = dots[i].className.replace(" active", "");
      }
      slides[slideIndex - 1].style.display = "block";
      dots[slideIndex - 1].className += " active";
      setTimeout(carousel, 2000); // Change image every 2 seconds
    }

    function currentSlide(n) {
      slideIndex = n;
      carousel();
    }
  </script>
{% endunless %}

{% schema %}
{
  "name": "New Blog Posts",
  "settings": [
    {
      "id": "liquid-range",
      "type": "range",
      "label": "Range",
      "min": 3,
      "max": 12,
      "step": 3,
      "default": 3
    },
    {
      "id": "new-blog",
      "type": "blog",
      "label": "Blog"
    }
  ],
  "presets": [
    {
      "name": "New Blog Posts",
      "category": "Posts"
    }
  ]
}
{% endschema %}
